<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="?colorOnPrimary"
        app:navigationIconTint="?colorOnPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок секции -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Внешний вид"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Карточка выбора темы -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/themeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_palette_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:tint="?colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/themeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Тема приложения"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/themeSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Текущая тема: Системная"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:layout_gravity="center_vertical"
                        app:tint="?android:textColorSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Заголовок секции -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="API и сервисы"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Карточка API ключа -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/apiKeyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_key_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:tint="?colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/apiKeyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OpenRouter API"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/apiKeySubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="API ключ не настроен"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:layout_gravity="center_vertical"
                        app:tint="?android:textColorSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Заголовок секции -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Напоминания"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Карточка включения напоминаний -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reminderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:tint="?colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ежедневные напоминания"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Напоминать о записи снов"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/reminderSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка времени напоминания -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reminderTimeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:tint="?colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Время напоминания"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/reminderTimeSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Время: 09:00"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:layout_gravity="center_vertical"
                        app:tint="?android:textColorSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Заголовок секции -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Информация"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Карточка "О приложении" -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="?colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        app:tint="?colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="О приложении"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Версия, информация о разработчике"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:layout_gravity="center_vertical"
                        app:tint="?android:textColorSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>