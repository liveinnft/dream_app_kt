<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dream_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сон без названия"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/symbols_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 символов"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:background="@drawable/frequency_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Настроение и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dream_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😐 Нейтральное"
                android:textSize="14sp"
                android:textColor="@color/primary_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/dream_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сегодня"
                android:textSize="12sp"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

        <!-- Превью содержимого -->
        <TextView
            android:id="@+id/dream_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Превью содержимого сна..."
            android:textSize="14sp"
            android:textColor="@color/dark_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="12dp" />

        <!-- Теги -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tags_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacing="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>