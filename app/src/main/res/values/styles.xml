<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Стиль для карточек -->
    <style name="DreamCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Стиль для заголовков -->
    <style name="DreamTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="DreamButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Стиль для чипов -->
    <style name="DreamChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
</resources>